<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.weiliu.hiroomi.UploadActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="List Your Space"
            android:id="@+id/titleUpload"
            android:gravity="center"
            android:textSize="20dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/LinearLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Add Photos"
                android:id="@+id/addPhotoButton" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:text="What is the address of your space?"
                android:id="@+id/addressQ"
                android:background="#81d8d0"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:gravity="center" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/address"
                android:paddingBottom="30dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:text="Give your listing a descriptive headline"
                android:id="@+id/titleQ"
                android:background="#81d8d0"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:gravity="center" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:paddingBottom="30dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:text="Give a description of your listing"
                android:id="@+id/descQ"
                android:background="#81d8d0"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:gravity="center" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:lines="5" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:text="How many roomates are you looking for??"
                android:id="@+id/tenantsQ"
                android:background="#81d8d0"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:gravity="center" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tenants"
                android:paddingBottom="30dp"
                android:inputType="number" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:text="What is the start date?"
                android:id="@+id/startdateQ"
                android:background="#81d8d0"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:gravity="center" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/startdate"
                android:text="@string/pick_date"/>
                <!--android:onClick="showDatePickerDialog" />-->
